= render('layout') do
  %h1= @page_title

  - if resource.cpd_audit_level.all_steps_content.present?
    .mb-2= resource.cpd_audit_level.all_steps_content

  - if resource.cpd_audit_level.extension_content.present?
    .mb-2= resource.cpd_audit_level.extension_content

  = effective_form_with(model: resource, url: wizard_path(step), method: :put) do |f|
    = f.hidden_field :current_step

    = f.radios :extension_request, cpd_audit_extension_request_collection,
      inline: true, required: true

    = f.show_if :extension_request, true do
      = f.date_field :extension_date, required: true
      = f.text_area :extension_request_reason, required: true

    = f.submit 'Save and Continue', center: true
